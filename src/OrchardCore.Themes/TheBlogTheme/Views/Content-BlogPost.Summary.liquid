<div class="post-preview">
    {% a display_for:Model.ContentItem %}
        <h2 class="post-title">
            {{ Model.ContentItem.Content.TitlePart.Title }}
        </h2>
    {% enda %}
    <p class="post-meta">
      {% assign format = "MMMM dd, yyyy" | t %}
      {% assign dateTime = "DateTime" | new_shape: utc: Model.ContentItem.CreatedUtc, format: format | shape_string %}
      {{ "Posted by" | t }} <a href="#">{{ Model.ContentItem.Owner }}</a> {{ "on {0}" | t: dateTime | raw }}
    </p>
</div>
<hr />